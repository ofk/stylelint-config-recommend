{
  "name": "@ofk/stylelint-config-recommend",
  "description": "stylelint config with scss support",
  "license": "MIT",
  "author": "ofk <ofkjpn+npm@gmail.com> (https://github.com/ofk/)",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "format": "run-s format:*",
    "format:files": "prettier --write \"**/*.{json,md}\"",
    "format:package-json": "prettier-package-json --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "stylelint-config-prettier": "8.0.2",
    "stylelint-prettier": "1.1.2"
  },
  "devDependencies": {
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "prettier-package-json": "2.1.3",
    "stylelint": "13.6.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "package.json": [
      "prettier --write",
      "npm run format:package-json"
    ]
  }
}
